<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">投稿編集</h1>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_tag(user_task_path ,method: :patch) do %>
            <p>name</p>
              <input type="text" name="name" value = "<%= @task.name %>">
            <p>note</p>
              <textarea name="note"><%= @task.note %></textarea>
            <div>
              <input type="submit" value="更新" class: "btn btn-primary btn-block btn-edit" >
            </div>          
          <% end %>
        </div>
      </div>
  </div>
</div>