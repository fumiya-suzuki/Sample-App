
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-bordered task-show-table">
      <thead>
        <tr>
          <th><%= Task.human_attribute_name :id %></th>
          <td><%= @task.id %></td>
        </tr>
        <tr>
          <th><%= Task.human_attribute_name :name %></th>
          <td><%= @task.name %></td>
        </tr>
        <tr>  
          <th><%= Task.human_attribute_name :note %></th>
          <td><%= raw Rinku.auto_link(h(simple_format(@task.note))) %></td>
        </tr>
        <tr>
          <th><%= User.human_attribute_name :created_at %></th>
          <td><%= @task.created_at.strftime('%Y/%m/%d %H:%M') %></td>
        </tr>
        <tr>
          <th><%= User.human_attribute_name :updated_at %></th>
          <td><%= @task.updated_at.strftime('%Y/%m/%d %H:%M') %></td>
        </tr>
      </thead>


    </table>
    <%= link_to "編集", edit_user_task_path ,class: "btn btn-success"%>
    <%= link_to "削除", user_task_path(@current_user.id, @task.id), method: :delete, class: "btn btn-danger"%>
  </div>    
</div>

      