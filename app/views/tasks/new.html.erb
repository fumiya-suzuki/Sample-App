<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">task投稿</h1>
      <div class="row">
        <div class="col-md-6 col-md-offset-3 new-task-form">
          <%= form_tag user_tasks_path do %>
            <% @task.errors.full_messages.each do |message| %>
              <div class="form-error"><%= message %></div>
            <% end %>    
            <p>name</p>
              <input type="text" name="name">
            <p>note</p>
              <textarea name="note"></textarea>
            <div>
              <input type="submit" value="新規作成" class: "btn btn-signup" >
            </div>          
          <% end %>
        </div>
      </div>
  </div>
</div>