<header class="navbar navbar-fixed-top ">
  <div class="container">
    <%= link_to "Task App", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "ホーム", root_path, id: "header-list" %></li>
        <% if logged_in? %>
          <li><%= link_to "タスク登録", new_user_task_path(current_user), id: "header-list" %></li>
          <% if current_user.admin? %>
          <li><%= link_to "全てのユーザー", users_path, id: "header-list" %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="dropdown-title">
              <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li class="menu">User</li>
              <li><%= link_to "プロフィール", current_user %></li>
              <li><%= link_to "設定", edit_user_path(current_user) %></li>
              <li class="menu">Task</li>
              <li><%= link_to "タスク一覧", user_tasks_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path , id: "header-list" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
