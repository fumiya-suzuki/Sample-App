<% provide(:title, "Top") %>

    
  
<% if logged_in? %> 
  <div class="top-contents">
    <h1 class="top-title">TaskApp</h1>
  
    <p class="top-text">
      TaskAppは簡易ToDo管理ツールです
    </p>

    <p class="top-text">↓↓初めてのご利用↓↓</p>
      <% if current_user.admin? %>
        <div class= "signup">
          <%= link_to "Sign Up", signup_path, class: "btn btn-lg btn-primary " %>
        </div>
      <% else %>
        <div class= "signup">
          <%= link_to "Sign Up", signup_path, class: "btn btn-lg btn-primary disabled" %>
        </div>
      <% end %>
  </div>

  <div class="top-contents top-right">
  
    
    <h1>ログイン</h1>
    
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_with(scope: :session, url: login_path, local: true) do |f| %>

          <%= f.label :email, class: "label-login" %>
          <%= f.email_field :email, disabled: true, class: 'form-control' %>

          <%= f.label :password, class: "label-login" %>
          <%= f.password_field :password, disabled: true, class: 'form-control' %>
      
          <%= f.label :remember_me, class: "checkbox inline checkbox-login", for: "remember-me" do %>
          <%= f.check_box :remember_me, id: "remember-me" %>
            <span>ログイン情報を記憶する</span>
          <% end %>

          <%= f.submit "ログインしています。", disabled: true, class: "btn btn-primary btn-block btn-login" %>
        <% end %>
      </div>
    </div>
<% else %>
  <div class="top-contents">
    <h1 class="top-title">TaskApp</h1>
    <p class="top-text">
      TaskAppは簡易ToDo管理ツールです
    </p>

    <p class="top-text">↓↓初めてのご利用↓↓</p>
    <div class= "signup">
      <%= link_to "Sign Up", signup_path, class: "btn btn-lg btn-primary" %>
    </div>
  </div>

  <div class="top-contents top-right">
  
    
    <h1>ログイン</h1>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_with(scope: :session, url: login_path, local: true) do |f| %>

          <%= f.label :email, class: "label-login" %>
          <%= f.email_field :email, class: 'form-control' %>

          <%= f.label :password, class: "label-login" %>
          <%= f.password_field :password, class: 'form-control' %>
      
          <%= f.label :remember_me, class: "checkbox inline checkbox-login", for: "remember-me" do %>
          <%= f.check_box :remember_me, id: "remember-me" %>
            <span>ログイン情報を記憶する</span>
          <% end %>

          <%= f.submit "Log In", class: "btn btn-primary btn-block btn-login" %>
        <% end %>
      </div>
    </div>
<% end %>
</div>